<div class="container">
  <form method="POST" action="<%=lessons_create_path%>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <label for="fname">Title:</label><br>
      <input type="text" id="fname" name="lesson[title]" class="form-control" aria-describedby="emailHelp" placeholder="Enter title"><br>
    </div>

    <%# <div class="form-group">
      <label for="lname">Content:</label><br>
      <input type="text" id="lname" name="lesson[content]" class="form-control" aria-describedby="emailHelp" placeholder="Enter content"><br>
    </div>

    <div class="form-group">
      <label for="lname">Category:</label><br>
      <input type="text" id="lname" name="lesson[category]" class="form-control" aria-describedby="emailHelp" placeholder="Enter category"><br>
    </div> %>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Choose book</label>
      </div>
      <select class="custom-select" name="lesson[book_id]">
        <% @books.each do |book|%>
          <option value="<%=book.id%>"><%= book.title %></option>
        <% end %>
      </select>
    </div>
    <div class="card-footer">
      <button type="submit" class="btn btn-info float-right">New</button>
      <a href="<%=lessons_path%>">Back</a>
    </div>
  </form>
</div>
