<div class="container">
  <form method="POST", action="<%= destroy_lessons_path(@lesson.id) %>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="_method" value="delete">

    <div class="card card-info">
      <div class="card-header">
        <h3 class="card-title">Lesson Detail</h3>
      </div>

      <div class="card-body">
        <div class="form-group row align-items-center">
          <label class="col-sm-2 col-form-label">Title:</label>
          <div class="col-sm-10">
            <p class="mb-0"><%= @lesson.title %></p>
          </div>
        </div>

        <div class="form-group row align-items-center">
          <label class="col-sm-2 col-form-label">Content:</label>
          <div class="col-sm-10">
            <p class="mb-0"><%= @lesson.content %></p>
          </div>
        </div>

        <div class="form-group row align-items-center">
          <label class="col-sm-2 col-form-label">Level:</label>
          <div class="col-sm-10">
            <p class="mb-0"><%= @lesson.level %></p>
          </div>
        </div>

        <div class="form-group row align-items-center">
          <label class="col-sm-2 col-form-label">Category:</label>
          <div class="col-sm-10">
            <p class="mb-0"><%= @lesson.category %></p>
          </div>
        </div>

        <div class="form-group row align-items-center">
          <label class="col-sm-2 col-form-label">Book:</label>
          <div class="col-sm-10">
            <p class="mb-0"><%= @lesson.book.title %></p>
          </div>
        </div>
      </div>

      <div class="card-footer">
        <button class="btn btn-danger" type="submit">Delete</button>
      </div>
    </div>
  </form>
</div>
